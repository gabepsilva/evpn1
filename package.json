{
  "name": "evpn1",
  "version": "1.0.0",
  "description": "A Graphical interface for expressvpn client. - Although this application is using the logo from expressvpn.com this application is independent and open source project -",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --icon=assets/evpc.png --prune --platform=linux --arch=all --out=dist --overwrite",
    "build-debian": "electron-installer-debian --icon=assets/evpc.png --src dist/evpn1-linux-x64 --dest dist --arch=all",
    "build-redhat": "electron-installer-redhat --icon=assets/evpc.png --src dist/evpn1-linux-x64 --dest dist --arch=all",
    "dist": "electron-builder"
  },
  "keywords": [
    "expressvpn",
    "vpn",
    "gui",
    "linux"
  ],
  "build": {
    "appId": "evpn1",
    "icon": "assets/logo.png",
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "author": "Gabriel da Silva <evpn1@psilva.email> (https://gitlab.com/gabrielpsilva)",
  "homepage": "hhttps://gitlab.com/gabrielpsilva/evpn1",
  "license": "MIT",
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-builder": "^22.1.0",
    "electron-installer-debian": "^2.0.1",
    "electron-installer-redhat": "^2.0.0",
    "electron-packager": "^14.1.0"
  }
}
